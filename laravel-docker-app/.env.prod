APP_NAME="RIMS Pre-Installation"
APP_ENV=production
APP_KEY=CHANGE_THIS_IN_PRODUCTION
APP_DEBUG=false
APP_URL=https://your-domain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=rims_toolbox
DB_USERNAME=laravel
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# MySQL Docker Environment Variables
MYSQL_DATABASE=${DB_DATABASE}
MYSQL_USER=${DB_USERNAME}
MYSQL_PASSWORD=${DB_PASSWORD}
MYSQL_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# Queue Performance Settings
QUEUE_MEMORY_LIMIT=256
QUEUE_MAX_JOBS=1000
QUEUE_MAX_TIME=3600

MAIL_MAILER=smtp
MAIL_HOST=your-smtp-server.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# Livewire File Upload Settings
LIVEWIRE_MAX_UPLOAD_SIZE=51200

# Production specific
DOMAIN=your-domain.com
TRUSTED_PROXIES=*
TRUSTED_HOSTS=your-domain.com

# Backup Configuration
BACKUP_NOTIFICATION_EMAIL=admin@your-domain.com
BACKUP_DISK=s3

# S3 Configuration (for production backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-backup-bucket

# API Rate Limiting
API_RATE_LIMIT=60

# Security Settings
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_DOMAIN=your-domain.com