APP_NAME="RIMS Pre-Installation"
APP_ENV=local
APP_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=rims_toolbox
DB_USERNAME=laravel
DB_PASSWORD=secret

# MySQL Docker Environment Variables
MYSQL_DATABASE=${DB_DATABASE}
MYSQL_USER=${DB_USERNAME}
MYSQL_PASSWORD=${DB_PASSWORD}
MYSQL_ROOT_PASSWORD=secret_root_password_change_me

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# Queue Performance Settings
QUEUE_MEMORY_LIMIT=128
QUEUE_MAX_JOBS=100
QUEUE_MAX_TIME=3600

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# Livewire File Upload Settings
LIVEWIRE_MAX_UPLOAD_SIZE=51200

# Development specific
DOMAIN=localhost
TRUSTED_PROXIES=*
TRUSTED_HOSTS=

# Backup Configuration
BACKUP_NOTIFICATION_EMAIL=admin@example.com
BACKUP_DISK=local

# API Rate Limiting
API_RATE_LIMIT=60